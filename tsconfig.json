{
  "compilerOptions": {
    "lib": ["es6"],
    "skipLibCheck": true,
    "target": "ES5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "lib",
    "rootDir": "./src",
    "importHelpers": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "jsx": "react",
    "noImplicitAny": false,
    "esModuleInterop": true
  },
  "typeRoots": ["./types", "./node_modules/@types"],
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
